{
	"schemaVersion": 1,
	"id": "combat-log-report",
	"version": "${version}",
	"name": "Combat Log Report",
	"description": "A combat logging tracking and reporting system for SwordSMP. Reports when players log out during combat without punishment. Promotes transparency and fair play.",
	"authors": [
		"SwordSMP"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/combat-log-report/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"combat.log.report.swordssmp.CombatLogReport"
		],
		"client": [
			"combat.log.report.swordssmp.CombatLogReportClient"
		]
	},
	"mixins": [
		"combat-log-report.mixins.json",
		{
			"config": "combat-log-report.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.11",
		"java": ">=21",
		"fabric-api": "*"
	}
}